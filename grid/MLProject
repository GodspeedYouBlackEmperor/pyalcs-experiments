name: rACS in Grid

conda_env: ../conda.yaml

entry_points:
  main:
    parameters:
      environment: {type: string, default: "grid-10-v0"}
      explore_steps: {type: int, default: 50}
      exploit_steps: {type: int, default: 10}
      decay: {type: bool, default: false}
    command: "python train.py
                                --environment {environment}
                                --explore-steps {explore_steps}
                                --exploit-steps {exploit_steps}
                                --decay {decay}"